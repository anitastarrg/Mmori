[
  {"name":"apt","usage":"apt [опции] команда","description":"Пакетный менеджер (оболочка над dpkg/apt-get) в Termux.","examples":"apt update; apt upgrade; apt install vim"},
  {"name":"pkg","usage":"pkg [команда] [пакет]","description":"Упрощённая оболочка apt для Termux.","examples":"pkg install git; pkg search python"},
  {"name":"bash","usage":"bash script.sh","description":"Интерпретатор командной оболочки Bash.","examples":"bash -c 'echo hello'"},
  {"name":"sh","usage":"sh script.sh","description":"POSIX shell интерпретатор.","examples":"sh -c 'ls -la'"},
  {"name":"ls","usage":"ls [опции] [путь]","description":"Список файлов и каталогов.","examples":"ls -la; ls -h"},
